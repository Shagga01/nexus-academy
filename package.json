{
  "name": "nexus-academy",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch src --ext ts,tsx --exec \"tsx -r tsconfig-paths/register src/app.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev:backend": "cross-env NODE_ENV=development nodemon --watch src --ext ts,tsx --exec \"tsx src/app.ts\"",
    "dev:frontend": "next dev",
    "dev:debug": "tsx --inspect-brk src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "check:types": "tsc --noEmit",
    "lint": "echo \"✅ Skipping lint for now, will add ESLint & Prettier later.\"",
    "format": "echo \"✅ Will set up Prettier autoformat here soon.\"",
    "ci:check": "npm run check:types && npm run lint",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio",
    "migrate:deploy": "prisma migrate deploy",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "seed": "tsx prisma/seed.ts",
    "cron:autoUpdate": "tsx cron/autoUpdateContent.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@faker-js/faker": "^9.9.0",
    "@prisma/client": "^5.16.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "graphql-scalars": "^1.23.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "openai": "^4.104.0",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.14.9",
    "cross-env": "^7.0.3",
    "husky": "^9.0.11",
    "jest": "^30.0.4",
    "next": "^14.2.4",
    "nodemon": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.16.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.4.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3"
  }
}

{
  "name": "nexus-academy",
  "version": "1.0.0",
  "description": "Nexus Academy - Expert Educational Platform for online learning and courses.",
  "private": true,
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "// Development Commands": "-----------------------------------",
    "dev:backend": "npm run prisma:generate && nodemon --exec 'node --loader ts-node/esm' src/app.ts",
    "dev:frontend": "next dev",
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "// Build Commands": "---------------------------------------",
    "build:backend": "npm run prisma:generate && tsc",
    "build:frontend": "next build",
    "build": "npm-run-all build:backend build:frontend",
    "// Start Commands": "---------------------------------------",
    "start:backend": "node dist/app.js",
    "start:frontend": "next start",
    "start": "npm-run-all --parallel start:backend start:frontend",
    "// Utility Commands": "-------------------------------------",
    "lint": "eslint \"{src,pages,components,lib}//*.ts\" --fix",
    "format": "prettier --write \"{src,pages,components,lib}//*.{ts,tsx,js,jsx,json,md}\"",
    "check:code": "npm run lint && prettier --check \"{src,pages,components,lib}//*.{ts,tsx,js,jsx,json,md}\"",
    "test": "jest",
    "prepare": "husky",
    "// Prisma Database Commands": "-----------------------------",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "db:studio": "prisma studio",
    "prisma:generate": "prisma generate"
  },
  "keywords": [
    "education",
    "nextjs",
    "nexus",
    "academy",
    "learning",
    "platform",
    "typescript",
    "prisma"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/nexus-academy.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/nexus-academy/issues"
  },
  "homepage": "https://github.com/your-username/nexus-academy#readme",
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@faker-js/faker": "^9.9.0",
    "@prisma/client": "^6.11.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "next": "15.3.4",
    "npm-run-all": "^4.1.5",
    "pg": "^8.16.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.6.2",
    "prisma": "^6.11.1",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.0"
  }
}